<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">Our Services</h1>
    <p class="lead text-muted">Comprehensive solutions for your business needs</p>
  </div>
  
  <div class="row g-4">
    <% if (locals.services && locals.services.length > 0) { %>
      <% locals.services.forEach((service, index) => { %>
        <div class="col-lg-4 col-md-6">
          <div class="card h-100 shadow-sm border-0">
            <div class="position-relative overflow-hidden">
              <img src="<%= service.image %>" class="card-img-top" alt="<%= service.name %>" style="height: 250px; object-fit: cover;">
            </div>
            <div class="card-body text-center d-flex flex-column">
              <h5 class="card-title fw-bold mb-3"><%= service.name %></h5>
              <p class="card-text text-muted flex-grow-1"><%= service.description %></p>
              <div class="mt-auto">
                <a href="/services/<%= service.slug %>" class="btn btn-primary">Learn More</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="text-center">
          <p class="text-muted">No services available at the moment.</p>
        </div>
      </div>
    <% } %>
  </div>
</div>

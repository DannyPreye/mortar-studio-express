<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
          <li class="breadcrumb-item"><a href="/services" class="text-decoration-none">Services</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= locals.service?.name || 'Service' %></li>
        </ol>
      </nav>

      <% if (locals.service) { %>
        <div class="text-center mb-5">
          <h1 class="display-4 fw-bold text-primary"><%= locals.service.name %></h1>
          <p class="lead text-muted"><%= locals.service.description %></p>
        </div>

        <div class="row g-4 mb-5">
          <div class="col-md-6">
            <img src="<%= locals.service.image %>" class="img-fluid rounded shadow" alt="<%= locals.service.name %>" style="width: 100%; height: 300px; object-fit: cover;">
          </div>
          <div class="col-md-6">
            <h3 class="fw-bold mb-3">What We Offer</h3>
            <p class="mb-4"><%= locals.service.details %></p>
            <% if (locals.service.features && locals.service.features.length > 0) { %>
              <ul class="list-unstyled">
                <% locals.service.features.forEach(feature => { %>
                  <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i><%= feature %></li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>

        <% if (locals.service.technologies && locals.service.technologies.length > 0) { %>
          <div class="bg-light p-4 rounded mb-5">
            <h3 class="fw-bold mb-3">Technologies We Use</h3>
            <div class="row g-3">
              <% locals.service.technologies.forEach((tech, index) => { %>
                <div class="col-md-3 col-sm-6">
                  <div class="badge bg-primary fs-6 w-100 py-2"><%= tech %></div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } %>

        <div class="text-center mb-5">
          <h3 class="fw-bold mb-4">Ready to Get Started?</h3>
          <p class="lead mb-4">Let's discuss your <%= locals.service.name.toLowerCase() %> project and bring your ideas to life.</p>
          <div class="d-flex gap-3 justify-content-center">
            <a href="/contact-us" class="btn btn-primary btn-lg">Get Quote</a>
            <a href="/contact-us" class="btn btn-outline-primary btn-lg">Contact Us</a>
          </div>
        </div>
      <% } else { %>
        <div class="text-center">
          <h1 class="display-4 fw-bold text-danger">Service Not Found</h1>
          <p class="lead text-muted">The service you're looking for doesn't exist.</p>
          <a href="/services" class="btn btn-primary">View All Services</a>
        </div>
      <% } %>

      <div class="text-center">
        <a href="/services" class="btn btn-secondary">‚Üê Back to Services</a>
      </div>
    </div>
  </div>
</div>

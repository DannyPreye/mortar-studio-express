{
  "name": "express-ejs-boilerplate",
  "version": "1.0.0",
  "description": "Express.js boilerplate with EJS and Bootstrap",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsup \"src/**/*.ts\" --watch --format esm --onSuccess \"npx node dist/server.js\"",
    "build": "tsup \"src/**/*.ts\" --format esm",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "boilerplate",
    "express",
    "ejs",
    "bootstrap",
    "typescript"
  ],
  "author": "iDegin Technologies",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/node": "^24.1.0"
  }
}
